{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 10,
		"sourceType": "module",
		"allowImportExportEverywhere": true
	},
	"rules": {
		"no-console": "off",
		"strict": [ "warn", "global" ],
		"curly": "warn",
		"no-unused-vars": "off",
		"no-debugger": "off",
		"no-extra-semi": "off"
	},
	"globals": {
		"describe": true,
		"test": true,
		"expect": true,
		"ymaps": true,
		"$": true
	}
}
